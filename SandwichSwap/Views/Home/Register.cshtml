@using SandwichSwap.ViewModels
@model LoginViewModel
@section Head{
    <link rel="stylesheet" href="~/Styles/order.css" />
    <title>Register</title>
}
@section top{
    <div class="transp">
        <h1 class="welcome">
            Register
        </h1>
    </div>
}

<p>Please Enter a Username and Password to start enjoying the Sandwich Swap Comunity!</p>
@Html.ActionLink("Login", "Login", "Home", null, new { @class = "navlink" })
@using (Html.BeginForm())
{
    <strong>Username:</strong>@Html.TextBoxFor(m => m.Username)<br/>
    <strong>Password:</strong>@Html.TextBoxFor(m => m.Password)<br/>
    <input type="submit" value="Create Account" />
}