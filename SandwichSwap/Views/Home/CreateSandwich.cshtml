@using SandwichSwap.ViewModels
@model CreateSandwichViewModel
@{
    Layout = null;

    AjaxOptions options = new AjaxOptions { UpdateTargetId = "toppingTable" };
}

<!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>CreateSandwich</title>
        <script src="~/scripts/jquery-1.8.0.js"></script>
        <script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
        <script>
            $(document).ready(function () {
                $("#addRow").click(function () {
                    $("#dropDown").clone().appendTo("#toppingTable");
                });
            });
                
        </script>
    
    </head>
    <body>

        <div id="hiddenForm" style="visibility: hidden">
            <div id="dropDown">
                <select>
                    @foreach (Topping t in Model.Toppings)
                    {
                        <option>@t.name</option>}
                </select>

            </div>
            
        </div>

        @using (Html.BeginForm("ActionToPost", "ControllerToPost"))
        {
            <select>
                @foreach (Bread t in Model.Breads)
                {
                    @:Bread Type:
                    <option value="@t.Id">@t.name</option>
                }
            </select>

            <section id="toppingTable">
                @Html.Partial("_ToppingTablePartialView", Model)
            </section>
            
        }

        <input type="button" id="addRow" value="Add Row" />


    </body>
</html>
