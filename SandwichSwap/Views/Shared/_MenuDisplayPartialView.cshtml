@using SandwichSwap.ViewModels
@model PartialMenuViewModel
@{
    Layout = null;
}
<div class="sandwichPart">
    
    <div id="MenuName">
        @Model.sandwichname
    </div>
    <div id="MenuUser">
        <strong>Created by:</strong> @Model.username
    </div>
    <div id="MenuDescript">
        <strong>Bread:</strong><br />
        @Model.Bread.name<br />
        <strong>Ingredients:</strong><br />
        
        @foreach(Sandwich_Topping st in Model.Toppings)
        {
            @st.Topping.ToString()<br />
        }
    </div>
</div>